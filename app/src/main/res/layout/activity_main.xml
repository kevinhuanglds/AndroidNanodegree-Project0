<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Nanodegree Apps!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POPULAR MOVIES"
            style="@style/ButtonStyle"
            android:onClick="showApp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STOCK HAWK"
            style="@style/ButtonStyle"
            android:onClick="showApp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            style="@style/ButtonStyle"
            android:onClick="showApp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MAKE YOUR APP MATERIAL"
            android:textAlignment="center"
            style="@style/ButtonStyle"
            android:onClick="showApp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GO UBIQUITOUS"
            style="@style/ButtonStyle"
            android:onClick="showApp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAPSTONE"
            style="@style/PinkButtonStyle"
            android:onClick="showApp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

</LinearLayout>
